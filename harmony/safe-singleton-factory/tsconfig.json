{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "rootDirs": ["src", "scripts"],
    "typeRoots": [ "node_modules/@types", "scripts/typings" ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src"]
}
